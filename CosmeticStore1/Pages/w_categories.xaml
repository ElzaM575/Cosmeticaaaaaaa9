<Page x:Class="CosmeticStore1.Pages.w_categories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CosmeticStore1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="w_categories">

    <Grid>
        <TextBox x:Name="CategoryNameTextBox" />
        <TextBox x:Name="CategoryDescriptionTextBox" />
        <DataGrid x:Name="CategoriesDataGrid" AutoGenerateColumns="False" ItemsSource="{Binding categoriesList}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding category_id}" />
                <DataGridTextColumn Header="Название" Binding="{Binding name}" />
                <DataGridTextColumn Header="ID родительской категории" Binding="{Binding parent_category_id}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Добавить" Margin="5,0" />
            <Button Content="Изменить" Margin="5,0" />
            <Button Content="Удалить" Margin="5,0" />
            <Button Content="Сохранить"  Margin="5,0" />
        </StackPanel>
    </Grid>
</Page>
